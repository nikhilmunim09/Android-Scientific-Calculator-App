<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="40sp"
        android:typeface="normal"
        android:textStyle="normal"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        android:background="#DFE5E8"
        tools:ignore="RtlCompat"
        />

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="50sp"
        android:typeface="normal"
        android:textStyle="normal"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:background="#DFE5E8"
        android:layout_weight="2"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="6"
            android:background="#DFE5E8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bsin"
                        app:backgroundTint="#929495"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#100303"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bcos"

                        app:backgroundTint="#929495"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                    <Button
                        android:id="@+id/btan"
                        app:backgroundTint="#929495"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                    <Button
                        android:id="@+id/bb1"
                        android:text="("
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:backgroundTint="#929495">

                    </Button>
                    <Button
                        android:id="@+id/bb2"
                        android:text=")"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:backgroundTint="#929495">

                    </Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/blog"
                        android:text="log"
                        app:backgroundTint="#D1D5D6"                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />
                    <Button
                        android:id="@+id/bac"
                        android:text="AC"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bc"
                        android:text="C"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b1byx"
                        android:text="1/x"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button

                        android:id="@+id/bdiv"
                        android:text="รท"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:backgroundTint="#929495">

                    </Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                    android:id="@+id/bln"
                        app:backgroundTint="#D1D5D6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                   >

                </Button>
                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </Button>
                    <Button
                        android:id="@+id/b8"
                        android:text="8"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b9"
                        android:text="9"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bmul"
                        android:text="x"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:backgroundTint="#929495">

                    </Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bfact"

                        android:text="X!"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        app:backgroundTint="#D1D5D6"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b4"
                        android:text="4"
                        app:backgroundTint="#D1D5D6"

                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b5"
                        android:text="5"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b6"
                        android:text="6"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bmin"
                        android:text="-"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:backgroundTint="#929495">
                    </Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bsqrt"

                        android:text="โ"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b1"
                        android:text="1"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b2"
                        android:text="2"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b3"
                        android:text="3"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bplus"
                        android:text="+"
                        app:backgroundTint="#929495"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bsquare"
                        app:backgroundTint="#D1D5D6"
                        android:text="Xยฒ"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bpi"
                        android:text="ฯ"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b0"
                        android:text="0"
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bdot"
                        android:text="."
                        app:backgroundTint="#D1D5D6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bequal"
                        android:text="="
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:backgroundTint="#FF6D00">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>